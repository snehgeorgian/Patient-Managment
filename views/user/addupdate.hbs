<section class="showcase py-3">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 mx-auto">
                <form action="/user" method="POST" autocomplete="off" class="reg-form new-reg-form p-4">
                    <h4 class="mb-3">User</h4>
                    <input type="hidden" name="_id" value="{{user._id}}">
                    <div class="row">
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="usrname" placeholder="Full Name"
                                value="{{user.usrname}}">
                           <small class="text-danger" style="font-size: 12px;">
                                {{user.usrnameError}}</small>
                        </div>
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="usremail" placeholder="Email"
                                value="{{user.usremail}}">
                           <small class="text-danger" style="font-size: 12px;">
                                {{user.emailError}}</small>
                        </div>
                        <div class="form-group col-md-4 mb-2">
                            <label class="form-label">Mobile</label>
                            <input type="text" class="form-control" name="usrmobile" placeholder="Mobile"
                                value="{{user.usrmobile}}">
                            <small class="text-danger" style="font-size: 12px;">
                                {{user.mobileError}}</small>
                        </div>
                        <div class="form-group col-md-4 mb-2">
                            <label class="form-label">DOB</label>
                            <input type="date" class="form-control" name="usrdateofbirth" placeholder="Date of Birth"
                                value="{{user.usrdateofbirth}}">
                           <small class="text-danger" style="font-size: 12px;">
                                {{user.usrdateofbirthError}}</small>
                        </div>
                        {{#if users }}  
                        <div class="form-group col-md-4 mb-2">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="usrpassword" placeholder="Password"
                                value="{{user.usrpassword}}">
                          <small class="text-danger" style="font-size: 12px;">
                                {{user.usrpasswordError}}</small>
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" name="usraddress"
                                placeholder="Address">{{user.usraddress}}</textarea>
                          <small class="text-danger" style="font-size: 12px;">
                                {{user.usraddressError}}</small>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">
                            Submit</button>
                        <a class="btn btn-secondary" href="/user/list">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>