<section class="showcase py-3 patient-list">
    <div class="container">

        <div class="row">
            <div class="col-sm-10 mx-auto">
                <form method="POST" action="/patient" enctype="multipart/form-data" class="reg-form p-4">
                    <h5 class="mb-3">{{viewTitle}}</h5>
                    <input type="hidden" name="_id" value="{{patient._id}}">
                    <input type="hidden" name="patappointmentdate" value="{{patient.patappointmentdate}}">
                    <div class="row">
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="patname" placeholder="Full Name"
                                value="{{patient.patname}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patnameError}}</small>
                        </div>
                        <div class="form-group col-md-2 mb-2">
                            <label class="form-label">Age</label>
                            <input type="number" class="form-control" name="patage" placeholder="Age"
                                value="{{patient.patage}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patageError}}</small>
                        </div>

                        <div class="form-group col-md-4 mb-2">
                            <label class="form-label">Gender</label>
                            <div class="form-check ps-0">
                                <input class="form-checkinput" type="radio" name="patgender" value="Male" {{#if m}} checked {{/if}} > 
                                <label class="form-check-label">Male</label>
                                <input class="form-checkinput" type="radio" name="patgender" value="Female"  {{#if f}} checked {{/if}}>
                                <label class="form-check-label">Female</label>
                            </div>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patgenderError}}</small>
                        </div>
                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Appointment Date </label>
                            <input type="date" class="form-control" name="patappointmentdate"
                                value="{{patient.patappointmentdate}}" >
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patdobError}}</small>
                        </div>
                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Doctor Name</label>
                            <input type="text" class="form-control" name="patdoctorname" placeholder="Doctor Name"
                                value="{{patient.patdoctorname}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patdoctornameError}}</small>
                        </div>
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Reason / Problem</label>
                            <input type="text" class="form-control" name="patreason" placeholder="Reason"
                                value="{{patient.patreason}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patreasonError}}</small>
                        </div>
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Previos History</label>
                            <input type="text" class="form-control" name="patprvhistory" placeholder="Previos History"
                                value="{{patient.patprvhistory}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patprvhistoryError}}</small>
                        </div>

                        
                        <div class="form-group col-md-6 mb-2">
                            <label class="form-label">Hospital  Location</label>
                            <select class="form-control" name="pathospitalloc" placeholder="Select Location"
                                value="{{patient.pathospitalloc}}">
                                <option value=" "> Select Location</option>                               
                                <option value="Barrie" {{#if x}} selected {{/if}} >Barrie</option>
                                <option value="Newmarket" {{#if y}} selected {{/if}} >Newmarket</option> 
                            </select>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.pathospitallocError}}</small>
                        </div>

                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Medical Record Number</label>
                            <input type="text" class="form-control" name="patmrn" placeholder="Medical Record Number"
                                value="{{patient.patmrn}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patmrnError}}</small>
                        </div>


                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="patemail" placeholder="Email"
                                value="{{patient.patemail}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patemailError}}</small>
                        </div>

                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Mobile</label>
                            <input type="text" class="form-control" name="patmobile" placeholder="Mobile"
                                value="{{patient.patmobile}}" required>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.patmobileError}}</small>
                        </div>


                        <div class="form-group col-md-3 mb-2">
                            <label class="form-label">Images</label>
                            <input type="file" class="form-control" id="patimage" name="file">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" name="pataddress"
                                placeholder="Address">{{patient.pataddress}}</textarea>
                            <small class="text-danger" style="font-size: 12px;">
                                {{patient.pataddressError}}</small>
                        </div>

                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-secondary" href="/patient/list">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>